{% extends 'base.html.twig' %}

{% block title %}Diagramas{% endblock %}

{% block body %}
{% if app.user %}
 <div class="content-wrapper" style="transform: translateX(30px); width: calc(100% - 280px);">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
    <h1>Soluciones de actividades</h1>
    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            <i class="icon fa fa-check"></i>
            {{ message }}
        </div>
    {% endfor %}

  <div class="card-body table-responsive p-0" style="height: auto;">

    <table id="example1" class="table table-bordered table-striped dataTable" role="grid" aria-describedby="example1_info">
        <thead>
            <tr>
                <th>Curso</th>
                <th>Actividad</th>
                <th>Descripci&oacute;n</th>
                <th>Soluci&oacute;n T&eacute;cnica</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for model_diagram_success in model_diagram_successes %}
            <tr>
                <td><strong><i>{{ model_diagram_success.course }}</i></strong></td>  
                <td><strong><i>{{ model_diagram_success.nactivity }}</i></strong></td>
                <td><strong><i>{{ model_diagram_success.description }}</i></strong></td>
                <td><strong><i>{{ model_diagram_success.tecsol }}</i></strong></td>

                <td>
                    <a href="/public/GoJS-master/projects/pdf/diagrama.php?mode=view&table=model_diagram_success&id={{ model_diagram_success.id }}" title="Ver">
                        <i class="fa fa-eye"></i>
                    </a>
                    <a href="/public/GoJS-master/projects/pdf/diagrama.php?mode=edit&table=model_diagram_success&id={{ model_diagram_success.id }}" title="Editar">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a href="{{ path('app_model_diagram_delete', {'id': model_diagram_success.id}) }}" title="Borrar">
                        <i class="fa fa-trash"></i>
                    </a>
                </td>
            </tr>
            {% else %}
            <tr>
                <td colspan="6">no hay  datos</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    </div>

 </div>
</section>
    </div>
{% endif %}
{% endblock %}