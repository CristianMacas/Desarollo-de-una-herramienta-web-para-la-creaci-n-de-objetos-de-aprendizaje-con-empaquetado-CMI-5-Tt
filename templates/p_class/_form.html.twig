{{ form_start(form) }}

<div class="row">
 
{{ form_row(form.course) }}



<div class="col">
    {{ form_row(form.nactivity) }}
</div>
</div>
       <div class="row">
        {{ form_row(form.name) }}
    </div>
   <div class="row-fluid">
    <div class="row">
    Atributes
    <div class="atribute"
    data-index="{{ form.atribute|length > 0 ? form.atribute|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_row(form.atribute.vars.prototype)|e('html_attr') }}"></div>
    </div>
</div>

   <div class="row-fluid">
    <div class="row">
    Operations
    <div class="operation"
    data-index="{{ form.operation|length > 0 ? form.operation|last.vars.name + 1 : 0 }}"
    data-prototype="{{ form_row(form.operation.vars.prototype)|e('html_attr') }}"></div>
    </div>
</div>





    <button class="btn btn-success">{{ button_label|default('Aceptar') }}</button>
        <a  class="btn btn-danger " href="{{ path('app_p_class_index') }}">Cancelar</a>
{{ form_end(form) }}



